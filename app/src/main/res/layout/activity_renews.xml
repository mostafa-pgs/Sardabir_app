<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#f7f7f7">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2371AF"
            android:weightSum="6">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnBack"
                android:focusableInTouchMode="true"
                android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"
                android:background="#00000000"
                android:padding="10dp"
                android:layout_weight="3"
                android:layout_gravity="center_vertical|left"
                android:scaleType="fitStart" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnImgSend"
                android:src="@mipmap/ic_send"
                android:scaleType="fitEnd"
                android:layout_weight="3"
                android:adjustViewBounds="false"
                android:background="#00000000"
                android:padding="5dp"
                android:layout_gravity="center_vertical|right" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lsPostItem"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/box_shadow"
                android:layout_marginBottom="10dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:layout_alignParentBottom="true"
        android:background="@drawable/border_top"
        android:padding="10dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editTxtComment"
            android:layout_weight="5"
            android:clickable="true"
            android:gravity="right"
            android:hint="متن بازنشر..."
            android:background="#00000000"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:id="@+id/imgUserLogo"
            android:layout_gravity="center|right"
            android:minHeight="32dp"
            android:minWidth="32dp"
            android:layout_weight="1"
            android:src="@mipmap/user_placeholder"
            android:scaleType="centerInside"
            android:background="#fada47"
            android:clickable="false"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="3dp"
            android:paddingBottom="2dp" />

    </LinearLayout>

</RelativeLayout>