<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@drawable/border_bottom"
    android:id="@+id/yu">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6">

        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_weight="6">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/txtTermName"
                android:layout_weight="6"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/txtViewCount"
                android:textSize="10dp" />
        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnImgTermLogo"
            android:layout_gravity="right"
            android:scaleType="fitCenter"
            android:minHeight="100dp"
            android:minWidth="100dp"
            android:background="#00000000"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/placeholder" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/txtTermDesc"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:background="#0a169e9f"
            android:weightSum="5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:id="@+id/followersBox">
                <ir.weblogestaan.sardabir.Classes.CircleImageView
                    android:id="@+id/img0"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:scaleType="fitXY"
                    android:layout_centerInParent="true" />
                <ir.weblogestaan.sardabir.Classes.CircleImageView
                    android:id="@+id/img1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="false"
                    android:layout_toRightOf="@+id/img2"
                    android:layout_toEndOf="@+id/img2"
                    android:scaleType="fitXY"
                    android:layout_centerInParent="true" />
                <ir.weblogestaan.sardabir.Classes.CircleImageView
                    android:id="@+id/img2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="false"
                    android:layout_toRightOf="@+id/img3"
                    android:layout_toEndOf="@+id/img3"
                    android:scaleType="fitXY"
                    android:layout_centerInParent="true" />
                <ir.weblogestaan.sardabir.Classes.CircleImageView
                    android:id="@+id/img3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="false"
                    android:layout_toRightOf="@+id/img4"
                    android:layout_toEndOf="@+id/img4"
                    android:scaleType="fitXY"
                    android:layout_centerInParent="true" />
                <ir.weblogestaan.sardabir.Classes.CircleImageView
                    android:id="@+id/img4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="false"
                    android:layout_toRightOf="@+id/img0"
                    android:layout_toEndOf="@+id/img0"
                    android:scaleType="fitXY"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/txtFollowerCount"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>