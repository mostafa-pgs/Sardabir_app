<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="6"
    android:background="#fff"
    android:id="@+id/notifHolder">

    <ir.weblogestaan.sardabir.Classes.CircleImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imgUserLogo"
        android:layout_weight="1"
        android:minWidth="100dp"
        android:minHeight="100dp"
        android:layout_gravity="center"
        android:layout_marginRight="14dp"
        android:scaleType="center"
        android:src="@mipmap/placeholder"
        android:layout_marginLeft="10dp"
        android:background="#fff"
        android:padding="2dp" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:weightSum="3"
        android:layout_weight="5"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Large Text"
            android:id="@+id/txtName"
            android:lines="1"
            android:paddingLeft="4dp"
            android:layout_alignBottom="@+id/imgNotifType"
            android:layout_toLeftOf="@+id/imgNotifType"
            android:layout_toStartOf="@+id/imgNotifType"
            android:textColor="#4f4647"
            android:textSize="12dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imgNotifType"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/notiflike" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/txtText"
            android:layout_below="@+id/txtName"
            android:layout_alignRight="@+id/txtName"
            android:layout_alignEnd="@+id/txtName" />

    </RelativeLayout>


</LinearLayout>